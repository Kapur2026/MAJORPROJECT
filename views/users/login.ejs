<% layout("layouts/boilerplate")%>
<div class="row">
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Login</h3>
            <form method="POST" action="/login" novalidate class="needs-validation">
                <div class="mb-3">
                    <lable for="username" class="form-lable">Username</lable>
                    <input type="text" name="username" id="username" class="form-control" required>
                    <div class="valid-feedback"> Looks good!</div>
                </div>
                <div class="mb-3">
                    <lable for="password" class="form-lable">Password</lable>
                    <input type="password" name="password" id="password" class="form-control" required>
                    <div class="invalid-feedback">Password sholud be at lest 8 characters</div>
                </div>
                <button class ="btn btn-success mb-3" >Login</button>
                <a href="/signup" class="btn-btn- ms-3">SignUp</a>
            </form>
        </div>
    </div>
</div>