<% layout("layouts/boilerplate")%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>SignUp</h3>
            <form method="POST" action="/signup" novalidate class="needs-validation">
                <div class="mb-3">
                    <lable for="username" class="form-lable">Username</lable>
                    <input type="text" name="username" id="username" class="form-control" required>
                    <div class="valid-feedback"> Looks good!</div>
                </div>
                <div class="mb-3">
                    <lable for="email" class="form-lable">Email</lable>
                    <input type="email" name="email" id="email" class="form-control" required>
                    <div class="valid-feedback"> looks good!</div>
                </div>
                <div class="mb-3">
                    <lable for="password" class="form-lable">Password</lable>
                    <input type="password" name="password" id="password" class="form-control" required>
                    <div class="invalid-feedback">Password sholud be at lest 8 characters</div>
                </div>
                <button class ="btn btn-success mb-3" >Signup</button>
            </form>
        </div>
    </div>